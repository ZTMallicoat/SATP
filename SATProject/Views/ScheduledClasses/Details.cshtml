@model SATProject.DATA.EF.ScheduledClass

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>ScheduledClass</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Start Date:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartDate)
        </dd>

        <dt>
            End Date:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EndDate)
        </dd>

        <dt>
            Instructor:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.InstructorName)
        </dd>

        <dt>
            Location:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Location)
        </dd>

        <dt>
            Course:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cours.CourseName)
        </dd>
        @if ((User.IsInRole("Admin") || User.IsInRole("Scheduling"))&&Request.IsAuthenticated){
        <dt>
            Class Status:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ScheduledClassStatus.SCSName)
        </dd>
        }
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ScheduledClassId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
